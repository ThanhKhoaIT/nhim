.components
  .modals
    .modal.fade#add-folder-modal
      .modal-dialog.modal-sm
        .modal-content
          .modal-header
            %h5.modal-title New folder
            %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
              %span{"aria-hidden" => "true"} Ã—
          .modal-body#new-folder-form
            = render 'nhim/folders/new_folder', folder: @new_folder
          .modal-footer
            %button.btn{ data: { dismiss: :modal }, type: :button } Cancel
            %button.btn.btn-primary{ data: { type: :submit }, type: :button } Create
      :javascript

  #actions
    %ul{ data: { mode: :normal } }
      %li
        = link_to '#', data: { action: :rename } do
          .icon= image_tag 'nhim/rename.png'
          .name Rename
      %li
        = link_to '#', data: { action: :star } do
          .icon= image_tag 'nhim/star.png'
          .name Add to Starred
      %li.line
      %li
        = link_to '#', data: { action: :remove } do
          .icon= image_tag 'nhim/remove.png'
          .name Remove
    %ul{ data: { mode: :deleted } }
      %li
        = link_to '#', data: { action: :restore } do
          .icon= image_tag 'nhim/restore.png'
          .name Restore
      %li
        = link_to '#', data: { action: :remove } do
          .icon= image_tag 'nhim/remove.png'
          .name Remove forever
