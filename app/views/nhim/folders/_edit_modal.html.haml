.modal.fade#edit-folder-modal
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %h5.modal-title Rename folder
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body#edit-folder-form
        = render 'nhim/folders/edit_form', folder: folder
      .modal-footer
        %button.btn{ data: { dismiss: :modal }, type: :button } Cancel
        %button.btn.btn-primary{ data: { type: :submit }, type: :button } Update

:javascript
  $('#edit-folder-modal').on('shown.bs.modal', function() {
    $('#folder_name').focus().select();
  });
